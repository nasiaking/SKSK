  <script>
    window.addEventListener('load', function() {
      // Determine the base URL from the browser's location.
      const SCRIPT_URL = window.location.href.split('?')[0];
      const MANIFEST_VERSION = '20250826';
      const SW_VERSION = '20250826';

      if (!SCRIPT_URL || !SCRIPT_URL.startsWith('http')) {
          console.error('FATAL: Could not determine a valid script URL from window.location.href.');
          return;
      }

      document.getElementById('manifestLink').href = SCRIPT_URL + '?asset=manifest&v=' + MANIFEST_VERSION;

      if ('serviceWorker' in navigator) {
        const swUrl = SCRIPT_URL + '?asset=sw&v=' + SW_VERSION;
        navigator.serviceWorker.register(swUrl)
          .then(registration => console.log('Service Worker registered successfully:', registration.scope))
          .catch(err => console.error('Service Worker registration failed:', err, 'URL:', swUrl));
      }

      let deferredPrompt;
      const btnInstall = document.getElementById('btnInstall');
      window.addEventListener('beforeinstallprompt', (e) => {
        e.preventDefault();
        deferredPrompt = e;
        if (btnInstall) btnInstall.classList.remove('hidden');
      });

      btnInstall?.addEventListener('click', async () => {
        if (!deferredPrompt) return;
        deferredPrompt.prompt();
        await deferredPrompt.userChoice;
        deferredPrompt = null;
        btnInstall.classList.add('hidden');
      });
    });
  </script>
